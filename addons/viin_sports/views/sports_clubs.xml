<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="clubs_view_kanban" model="ir.ui.view">
            <field name="name">clubs.view.tree</field>
            <field name="model">sports.club</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="slogan"/>
                    <field name="state"/>
                    <field name="avatar" widget="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click" t-attf-style="text-align:center;flex:none">
                                <div class="o_kanban_record_headings">
                                    <div class="float-right" t-if="record.state.raw_value == 'active'">
                                        <span class="fa fa-circle text-success" role="img" aria-label="Available" title="Active"></span>
                                    </div>
                                    <div class="float-right" t-if="record.state.raw_value == 'offline'">
                                        <span class="fa fa-circle text-danger" role="img" aria-label="Offline" title="Offline"></span>
                                    </div>
                                    <div class="float-right" t-if="record.state.raw_value == 'break'">
                                        <span class="fa fa-circle text-warning" role="img" aria-label="Break" title="Break"></span>
                                    </div>
                                </div>
                                <div class="o_kanban_image" t-attf-style="float:none;margin:auto;">
                                    <img t-att-src="kanban_image('sports.club', 'avatar', record.id.raw_value)" alt="Clubs"/>
                                </div>
                                <div class="oe_kanban_details" t-attf-style="padding-left: 0px">
                                    <strong>
                                        <field name="name" context="{'idkhoi':'11111'}"/>
                                    </strong>
                                    <div class="mx-auto">
                                        <field name="slogan"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="clubs_view_tree" model="ir.ui.view">
            <field name="name">clubs.view.tree</field>
            <field name="model">sports.club</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="slogan"/>
                </tree>
            </field>
        </record>
        <record id="viin_sport_club_view_form" model="ir.ui.view">
            <field name="name">sports.club.view.form</field>
            <field name="model">sports.club</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <field name="avatar" widget="image" class="oe_avatar" options="{&quot;zoom&quot;: true, &quot;}"/>
                            <h1>
                                <field name="name" class="text-info" placeholder="Club Name" required="True"/>
                            </h1>
                            <h2>
                                <field name="slogan" class="text-warning" placeholder="Club Slogan" />
                            </h2>
                        </div>
                        <group>
                            <field name="member_count"/>
                            <field name="state"/>
                            <field name="total_balance"/>
                            <field name="president_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                        <notebook>
                            <page string="Publication">
                                <field name="publication"/>
                            </page>
                            <page string="Members">
                                <field name="member_ids">
                                    <tree>
                                        <field name="name" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Team">
                                <field name="team_ids">
                                    <kanban>
                                        <field name="id"/>
                                        <field name="name"/>
                                        <field name="slogan"/>
                                        <field name="avatar" widget="image"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click" t-attf-style="text-align:center;flex:none">
                                                    <div class="o_kanban_image" t-attf-style="float:none;margin:auto;">
                                                        <img t-att-src="kanban_image('sports.team', 'avatar', record.id.raw_value)" alt="Clubs"/>
                                                    </div>
                                                    <div class="oe_kanban_details" t-attf-style="padding-left: 0px">
                                                        <strong>
                                                            <field name="name"/>
                                                        </strong>
                                                        <div class="mx-auto">
                                                            <field name="slogan"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            <page string="Monney">
                                <field name="budget_manager_ids"/>
                                <field name="transaction_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>