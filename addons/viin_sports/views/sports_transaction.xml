<odoo>
    <data>
        <record id="sports_transaction_view_form" model="ir.ui.view">
            <field name="name">sports_transaction_view_form</field>
            <field name="model">sports.transaction</field>
            <field name="arch" type="xml">
                <form>
                	<header>
                		<button action="action_approval_tran" type="object" string="Done" class="oe_highlight"/> 
                		<field name="state" widget="statusbar" statusbar_visiable="draft,confirm,done"/>
                	</header>
                    <sheet>
                    	<field name="title"/>
                    	<field name="amount"/>
                    	<field name="reason"/>
                    	<field name="tran_type"/>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>