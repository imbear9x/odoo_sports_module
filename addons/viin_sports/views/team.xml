<odoo>
    <data>
        <record id="viin_sport_team_view_form" model="ir.ui.view">
            <field name="name">viin_sports.club.view.form</field>
            <field name="model">viin_sports.team</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <field name="avatar" widget="image" class="oe_avatar" options="{&quot;zoom&quot;: true, &quot;}"/>
                            <h1>
                                <field name="team_name" class="text-info" placeholder="Club Name" required="True"/>
                            </h1>
                            <h2>
                                <field name="slogan" class="text-secondary bg-dark" placeholder="Club Slogan" />
                            </h2>
                        </div>
                        <group>
                            <field name="member_count"/>
                            <field name="admin"/>
                        </group>
                        <notebook>
                            <page string="Members">
                                <field name="member_ids">
                                    <tree>
                                        <field name="name" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
                <kanban>
                    <field name="id"/>
                    <field name="team_name"/>
                    <field name="slogan"/>
                    <field name="avatar" widget="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click" t-attf-style="text-align:center;flex:none">
                                <div class="o_kanban_image" t-attf-style="float:none;margin:auto;">
                                    <img t-att-src="kanban_image('viin_sports.team', 'avatar', record.id.raw_value)" alt="Clubs"/>
                                </div>
                                <div class="oe_kanban_details" t-attf-style="padding-left: 0px">
                                    <strong>
                                        <field name="team_name"/>
                                    </strong>
                                    <div class="mx-auto">
                                        <field name="slogan"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>