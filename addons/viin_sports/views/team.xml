<odoo>
    <data>
        <record id="viin_sport_team_view_form" model="ir.ui.view">
            <field name="name">viin_sports.team.view.form</field>
            <field name="model">viin_sports.team</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <field name="avatar" widget="image" class="oe_avatar" options="{&quot;zoom&quot;: true, &quot;}"/>
                            <h1>
                                <field name="team_name" class="text-info" placeholder="Name" required="True"/>
                            </h1>
                            <h2>
                                <field name="slogan" class="text-warning" placeholder="Slogan" />
                            </h2>
                        </div>
                        <group>
                            <field name="member_count" class="text-danger" placeholder="MemberCount" />
                            <field name="admins"/>
                            <field name="club_id" invisible="1"/>
                            <field name="member_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
