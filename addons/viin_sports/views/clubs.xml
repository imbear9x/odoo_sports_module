<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="clubs_view_kanban" model="ir.ui.view">
            <field name="name">clubs.view.tree</field>
            <field name="model">viin_sports.clubs</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="club_name"/>
                    <field name="slogan"/>
                    <field name="avatar" widget="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click" t-attf-style="text-align:center;flex:none">
                                <div class="o_kanban_image" t-attf-style="float:none;margin:auto;">
                                    <img t-att-src="kanban_image('viin_sports.clubs', 'avatar', record.id.raw_value)" alt="Clubs"/>
                                </div>
                                <div class="oe_kanban_details" t-attf-style="padding-left: 0px">
                                    <strong>
                                        <field name="club_name"/>
                                    </strong>
                                    <div class="mx-auto">
                                        <field name="slogan"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="clubs_view_tree" model="ir.ui.view">
            <field name="name">clubs.view.tree</field>
            <field name="model">viin_sports.clubs</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="club_name"/>
                    <field name="slogan"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>